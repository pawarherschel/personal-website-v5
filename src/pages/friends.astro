---
import {getCollection, getEntry, render} from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import {i18n} from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { Image } from "astro:assets";
import ImageWrapper from "@components/misc/ImageWrapper.astro";
const friendsItems = await getCollection("friends",);

const friendsPage = await getEntry("spec", "friends");
if (!friendsPage) {
    throw new Error("Friends page content not found");
}

const {Content} = await render(friendsPage);

interface UsefulItems { avatar: string }

let bskys: Map<string, UsefulItems> = new Map();

for(const item of friendsItems) {
    try {
        const res = await fetch(`https://public.api.bsky.app/xrpc/app.bsky.actor.getProfile?actor=${item.data.bsky}`);
        if (res.ok) {
            const json = await res.json();

            bskys.set(item.id, json)
        }
    } catch (e) {

    }
}

const items = friendsItems;
---
<MainGridLayout title={i18n(I18nKey.friends)} description={i18n(I18nKey.friends)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 mb-4">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content/>
            </Markdown>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-8 my-4">
                {items.map((item) => (
                    <div class="relative group overflow-hidden aspect-[88/31]">
                        {
                            !!item.data.button && <Image
                                loading="lazy"
                                src={item.data.button}
                                alt={item.data.title + "'s button"}
                                inferSize={true}
                                id={item.id}
                                class="absolute top-0 left-0 transition duration-300 group-hover:translate-y-full w-auto h-full object-contain aspect-[88/31]"
                                style="image-rendering: pixelated;"
                            />
                        }
                        <div class="flex flex-nowrap items-stretch gap-4 rounded-[var(--radius-large)] h-full">
                            <div class="w-28 h-full flex-shrink-0 rounded-lg overflow-hidden bg-zinc-200 dark:bg-zinc-900">
                                <Image
                                    loading="lazy"
                                    src={
                                        item.data.icon ?
                                            item.data.icon :
                                            item.data.bsky ?
                                                bskys.get(item.id)?.avatar ?? "https://upload.wikimedia.org/wikipedia/commons/2/2d/Crystal_error.svg" :
                                                "https://upload.wikimedia.org/wikipedia/commons/2/2d/Crystal_error.svg"
                                    }
                                    alt={item.data.title} class="w-full h-full object-fit"
                                    inferSize={true}
                                >
                            </div>
                            <div class="grow w-full">
                                <div class="font-bold transition text-lg text-neutral-900 dark:text-neutral-100 mb-1 hyphens-auto">{item.data.title}</div>
                                <div class="text-50 text-sm font-medium text-justify hyphens-auto">{item.data.desc}</div>
                            </div>
                            <a href={item.data.url} target="_blank" rel="noopener"
                               class="flex btn-regular w-[3.25rem] rounded-lg bg-[var(--enter-btn-bg)] hover:bg-[var(--enter-btn-bg-hover)] active:bg-[var(--enter-btn-bg-active)] active:scale-95">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                     aria-hidden="true" role="img"
                                     class="transition text-[var(--primary)] text-4xl mx-auto iconify iconify--material-symbols"
                                     width="1em" height="1em" viewBox="0 0 24 24">
                                    <path fill="currentColor"
                                          d="M12.6 12L8.7 8.1q-.275-.275-.275-.7t.275-.7t.7-.275t.7.275l4.6 4.6q.15.15.213.325t.062.375t-.062.375t-.213.325l-4.6 4.6q-.275.275-.7.275t-.7-.275t-.275-.7t.275-.7z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</MainGridLayout>
