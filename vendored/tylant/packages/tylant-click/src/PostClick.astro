---
interface Props {
  articleId: string;
}

const { articleId } = Astro.props;
---

<script data-id={articleId} is:inline>
  const postId = document.currentScript.getAttribute("data-id");
  console.log("Post ID:", postId);

  window.postServer("/article/click", {
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify({
      id: postId,
    }),
  });
</script>
